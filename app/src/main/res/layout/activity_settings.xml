<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">

    <TextView
        android:id="@+id/lang4"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginTop="80dp"
        android:text="Numbers range:"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/lang2"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/lang3"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginTop="80dp"
        android:text="Clear Top Record"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/lang"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/lang2"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:text="Language:"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Settings:"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/lang"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginTop="80dp"
        android:text="Rounds number:"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/lang4"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/saveset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="backToGame"
        android:text="Save And Back To Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.925"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/cleartoprecord"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/saveset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lang3"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/langbut"
        android:layout_width="198dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="changeLang"
        android:text="EN"
        app:layout_constraintBottom_toTopOf="@+id/lang4"
        app:layout_constraintTop_toBottomOf="@+id/lang2"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>